<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>

<div>
  <div >
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
<div class="welcome_image" style="display: block;height:100%;width:100%;min-width:1000px;min-height:646px;">
  <!--<img id="backgroundimage1" src="images/first.jpg" style="display:block;width:100%;height:100%;margin:0;" />-->
  <%= image_tag "sessions/first.jpg", id: "bg_img_first", style: "display:block;width:100%;height:100%;margin:0;" %>
  <!--<img id="backgroundimage0" src="images/second.jpg" style="display:none;width:100%;height:100%;margin:0;" />-->
  <%= image_tag "sessions/second.jpg", id: "bg_img_second",style: "display:none;width:100%;height:100%;margin:0;" %>
</div>
<div class="welcome_main">
  <div class="welcome_flame">
    <div class="welcome_tip" style="font-size: 22px;font-weight: 600">
      我穿越人群轰鸣，来到你家楼下，大声喊着我爱你，你流着泪说不搞基，炸成了天边一朵红霞！
    </div>
    <div class="welcome_signin">
      <div class="welcome_sign_border">
        <span style="color: #4F4F4F">登录</span>
      </div>
      <input type="text" dataflag="welcome_fake_input" class="welcome_sign_input" value="请输入邮箱"/>
      <input type="text" dataflag="welcome_real_input" class="welcome_sign_input" />
      <input type="text" dataflag="welcome_fake_input" value="请输入密码" class="welcome_sign_input welcome_signin_button" />
      <input type="password" dataflag="welcome_real_input" class="welcome_sign_input welcome_signin_button" />
      <a class="button_signin" tabindex="0">登录</a>
    </div>
    <div class="welcome_signup">
      <div class="welcome_sign_border">
        <span style="color: #4F4F4F">新来的？注册吧，骚年！</span>
      </div>
      <input type="text" dataflag="welcome_fake_input" class="welcome_sign_input" value="请输入邮箱"/>
      <input type="text" dataflag="welcome_real_input" class="welcome_sign_input"  />
      <input type="text" dataflag="welcome_fake_input" value="请输入密码" class="welcome_sign_input"/>
      <input type="password" dataflag="welcome_real_input" class="welcome_sign_input" />
      <input type="text" dataflag="welcome_fake_input" value="请再次输入密码" class="welcome_sign_input" />
      <input type="password" dataflag="welcome_real_input" class="welcome_sign_input"  />
      <a class="button_register" tabindex="0">注册新的账号</a>
    </div>
  </div>
</div>