<div class="projects" style="display: inline">
<ul>
  <li>
    <div>
      <% if @project.image.nil? %>
          <span><%= image_tag 'default.jpg' ,style: 'width: 310px; max-height:500px; overflow:hidden;'%></span>
      <% else %>
          <span><%= image_tag @project.image ,style: 'width: 310px; max-height:500px; overflow:hidden;'%></span>
      <% end %>
      <span class="project_span project_name <%= @project.is_public ? 'state_public' : 'state_private' %>" ><%= @project.name %></span><br/>
      <span class="project_span project_description" ><%= @project.description %></span>
      <span class="project_span project_milestone">milestone</span>
    </div>
    <span class="project_span project_comments">comments<br/>comments</span>
  </li>
</ul>
</div>
<div style="float: right;width: 640px;margin-top: 15px;border-bottom: 1px solid #aaaaaa; border-radius: 2px;padding: 10px;box-shadow: 0 1px 2px 0 #cccccc; -webkit-box-shadow:0 1px 2px 0 #cccccc; background-color:#FFFFFF;">
  <div id="milestone_list">
    <%= render '/milestones/milestones_list' %>
  </div>

  <%= form_for :milestone,url: project_milestones_path(@project.id),methode: :post,remote: true do |f| %>
    <%= f.text_field :name ,placeholder: "里程碑" %><br/>
    <%= f.text_field :image %><br/>
    <%= f.submit %>
  <% end %>

  <%= link_to 'Back', projects_path %>
</div>